@{
    ViewData["Title"] = "Home Page";
}

@model BookListViewModel

<!--Top part of display-->
<table class="table table-dark table-striped table-hover">
    <thead class="thead-light table-bordered table-condensed">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">AuthorFirst</th>
            <th scope="col">AuthorMiddle</th>
            <th scope="col">AuthorLast</th>
            <th scope="col">Publisher</th>
            <th scope="col">ISBN</th>
            <th scope="col">Classification</th>
            <th scope="col">Category</th>
            <th scope="col">Price</th>
            <th scope="col">PageNumber</th>
            <th scope="col">Purchase</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.Books)
        {
            <partial name="BookSummary" model="x" />
        } 
    </tbody>
</table>
<br />
<br />


<div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true" page-class="btn"
     page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary"
     page-url-category="@Model.Category"
     class="btn-group pull-right m-1"></div>

