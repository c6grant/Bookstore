@{
    ViewData["Title"] = "Home Page";
}

@model BookListViewModel


<table class="table table-dark table-striped table-hover">
    <thead class="thead-light table-bordered table-condensed">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">AuthorFirst</th>
            <th scope="col">AuthorMiddle</th>
            <th scope="col">AuthorLast</th>
            <th scope="col">Publisher</th>
            <th scope="col">ISBN</th>
            <th scope="col">Classification</th>
            <th scope="col">Category</th>
            <th scope="col">Price</th>
            <th scope="col">PageNumber</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.Books)
        {
            <tr>
                <th>@x.BookId</th>
                <td>@x.Title</td>
                <td>@x.AuthorFirst</td>
                <td>@x.AuthorMiddle</td>
                <td>@x.AuthorLast</td>
                <td>@x.Publisher</td>
                <td>@x.ISBN</td>
                <td>@x.Classification</td>
                <td>@x.Category</td>
                <td>$@x.Price</td>
                <td>@x.PageNum</td>
            </tr>
        } 
    </tbody>
</table>
<br />
<br />


<div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true" page-class="btn"
     page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary"
     class="btn-group pull-right m-1"></div>

